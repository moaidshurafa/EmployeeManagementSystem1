@model IEnumerable<EmployeeManagementSystem1.Models.Employee>

@{
    ViewData["Title"] = "Employee Index";
}

<h1>Employee Management</h1>

<p>
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Age</th>
            <th>Start Date</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FullName</td>
                <td>@employee.Position</td>
                <td>@employee.Office</td>
                <td>@employee.Age</td>
                <td>@employee.StartDate.ToShortDateString()</td>
                <td>@employee.Salary.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


